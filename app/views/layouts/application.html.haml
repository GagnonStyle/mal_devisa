!!!
%html
  %head
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title= content_for?(:title) ? yield(:title) : 'Mal Devisa'
    %meta{:name => 'description', :content => "#{content_for?(:description) ? yield(:description) : 'Mal Devisa'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/social_bar'
      = render 'layouts/main_navigation'
      :javascript
        setupPopListener();
    %main{:role => 'main'}
      = yield
    %footer
      &copy; 2015 - Mal Devisa. All Rights Reserved.